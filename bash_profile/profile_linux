#!/usr/bin/bash

export DOTFILE_ROOT=~/.mine_dotfiles
export ALIAS_ROOT=$DOTFILE_ROOT/bash_aliases
export PROFILE_ROOT=$DOTFILE_ROOT/bash_profile

# This needs to be called first
. $PROFILE_ROOT/scripts/start

for f in $PROFILE_ROOT/scripts/*; do
    if [[ -f "$f" ]]; then
        . "$f"
    fi
done

. ~/.local/bin/virtualenvwrapper.sh >/dev/null

pip3 completion --bash >/dev/null

